<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <TextView
        android:id="@+id/id_myquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="my question"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/id_myquesion_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/id_myquestion"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:text="my question type"/>
    <TextView
        android:id="@+id/numbers_of_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_myquesion_type"
        android:layout_marginStart="340dp"
        android:textSize="20sp"
        android:text="1"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/id_myquesion_type"
        android:layout_marginStart="350dp"
        android:src="@drawable/ic_answer" />


</RelativeLayout>